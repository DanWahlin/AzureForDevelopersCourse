@page
@model CosmosDBModel
@{
    ViewData["Title"] = "Cosmos DB";
}

<h1>Movies</h1>
<table>
    <tr>
      <th>Title</th>
      <th>Director</th>
      <th>&nbsp;</th>
    </tr>
    @foreach(var movie in Model.Movies) {
        <tr>
            <td>@movie.Title</td>
            <td>@movie.Director</td>
            <td><a class="btn btn-danger" asp-page-handler="DeleteMovie" asp-route-id="@movie.id">X</a></td>
        </tr>
    }
</table>

<br /><br />
<h2>Add Movie</h2>
<form method="post">
  <div asp-validation-summary="All" class="text-danger"></div>
  <div class="form-group">
    <label for="title">Title</label>
    <input type="text" class="form-control" id="title" asp-for="Movie.Title">
  </div>
  <div class="form-group">
    <label for="director">Director</label>
    <input type="text" class="form-control" id="director" asp-for="Movie.Director">
  </div>
  <input type="submit" value="Create" class="btn btn-primary" />
</form>
